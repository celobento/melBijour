generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id            String   @id @default(cuid())
  name          String?
  image         String?
  phone         String?
  address       String?
  addressNumber Int?
  zipCode       String?
  complement    String?
  city          String?
  state         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User?
  sales         Sales[]

  @@map("customers")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String?
  googleId     String?  @unique
  avatarUrl    String?
  customerId   String   @unique
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  customer     Customer @relation(fields: [customerId], references: [id])

  @@map("users")
}

model Settings {
  id                  String   @id @default(cuid())
  companyName         String
  companyId           String?
  pixKey              String?
  phone               String?
  email               String?
  logo                String?
  creditCardAvailable Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("settings")
}

enum ProductCategory {
  NECKLACE
  EARRING
  BRACELET
}

model Product {
  id              String          @id @default(cuid())
  name            String
  description     String?
  image           String?
  currentStock    Int             @default(0)
  value           Float
  productCategory ProductCategory
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  salesProducts   SalesProduct[]

  @@map("products")
}

enum SalesState {
  CREATED
  CONCLUDED
  CANCELLED
}

model Sales {
  id            String         @id @default(cuid())
  customerId    String
  total         Float
  state         SalesState     @default(CREATED)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  customer      Customer       @relation(fields: [customerId], references: [id])
  salesProducts SalesProduct[]
  salesHistory  SalesHistory[]

  @@map("sales")
}

model SalesHistory {
  id        String   @id @default(cuid())
  salesId   String
  userId    String
  detail    String
  status    String
  createdAt DateTime @default(now())
  sales     Sales    @relation(fields: [salesId], references: [id])

  @@map("sales_history")
}

model SalesProduct {
  id         String   @id @default(cuid())
  salesId    String
  productId  String
  qtd        Int
  unitVlr    Float
  totalValue Float
  createdAt  DateTime @default(now())
  sales      Sales    @relation(fields: [salesId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@map("sales_products")
}
